<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://java.sun.com/xml/ns/javaee" 
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     version="6"
     xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/application_6.xsd">

    <application-name>picketlink-oauth-provider</application-name>

    <initialize-in-order>true</initialize-in-order>

    <module>
      <web>
         <web-uri>picketlink-oauth-provider-server.war</web-uri>
         <context-root>picketlink-oauth-provider-server</context-root>
      </web>
    </module>
    <module>
      <web>
         <web-uri>picketlink-oauth-provider-www.war</web-uri>
         <context-root>picketlink-oauth-provider</context-root>
      </web>
    </module>
</application>
